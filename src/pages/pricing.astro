<style>
  @import "../styles/global.css";

  .glow-green {
    text-shadow: 0 0 10px #4ade80, 0 0 20px #4ade80, 0 0 30px #4ade80;
  }

  .glow-red {
    text-shadow: 0 0 10px #f87171, 0 0 20px #f87171, 0 0 30px #f87171;
  }

  /* Adjust table width */
  #detailed-pricing {
    max-width: 85%;
    width: 100%;
    margin: 2rem auto;
  }

  #detailed-pricing th > div {
    display: inline-block;
    white-space: nowrap;
  }

  #detailed-pricing th:first-child > div {
    border-top-left-radius: 9999px;
    border-bottom-left-radius: 9999px;
  }

  #detailed-pricing th:last-child > div {
    border-top-right-radius: 9999px;
    border-bottom-right-radius: 9999px;
  }
</style>